# Variables de entorno para producción del sistema de autenticación

# Base de datos Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password

# Redis (opcional pero recomendado)
REDIS_HOST=localhost
REDIS_PORT=6379

# Claves JWT (GENERAR NUEVAS EN PRODUCCIÓN)
JWT_SECRET_KEY=your_super_secret_jwt_key_here_please_change_in_production
JWT_REFRESH_SECRET_KEY=your_super_secret_refresh_key_here_please_change_in_production

# Usuario administrador inicial
ADMIN_PASSWORD=Admin123!ChangeMeNow
ADMIN_EMAIL=admin@yourcompany.com

# Entorno
ENVIRONMENT=production  # development | staging | production

# Configuración de CORS para producción
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Configuración de tokens
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
